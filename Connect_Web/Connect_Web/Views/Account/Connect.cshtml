    const GetHostGamesUrl = '@Url.Action("GetHostGames")' + '?username=';
    const GetGuestGamesUrl = '@Url.Action("GetGuestGames")' + '?username=';
    const CheckUserExistsUrl = '@Url.Action("CheckUserExists")' + '?GuestName=';
</script>